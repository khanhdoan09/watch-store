    <script>
        // load image
        $(function () {
            $(".img-load").each(function () {
                $(this).change(function () {
                    let imgShow = $(this).data("imgshow")
                    if (this.files) {
                        var reader = new FileReader();
                        reader.onload = function (e) {
                            $('#' + imgShow).attr('src', e.target.result);
                        }
                        reader.readAsDataURL(this.files[0]);
                    }
                })
            })
        })

    </script>
